/* 收货地址列表页面样式 */
.address-container {
  height: 100vh;
  background-color: #f7f7f7;
  display: flex;
  flex-direction: column;
}

/* 顶部编辑按钮容器 */
.top-edit-btn-container {
  display: flex;
  justify-content: flex-end;
  padding: 10px 16px;
  background-color: #fff;
  border-bottom: 1px solid #e0e0e0;
}

.edit-btn {
  font-size: 14px;
  color: #007aff;
  padding: 6px 12px;
}

/* 地址列表容器 - 可滚动区域 */
.address-list-container {
  flex: 1;
  overflow-y: auto;
  margin-bottom: 70px; /* 避开固定的底部按钮 */
  background-color: #f7f7f7;
}

/* 地址列表 */
.address-list {
  padding: 10px 16px;
}

.address-item {
  background-color: #fff;
  border-radius: 8px;
  margin-bottom: 10px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.address-content {
  padding: 16px;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.name {
  font-size: 15px;
  font-weight: 500;
  color: #333;
  margin-right: 12px;
}

.phone {
  font-size: 14px;
  color: #666;
}

.default-tag {
  font-size: 12px;
  color: #fff;
  background-color: #ff4d4f;
  padding: 2px 6px;
  border-radius: 10px;
  margin-left: auto;
}

.address-detail {
  font-size: 14px;
  color: #666;
  line-height: 1.5;
}

/* 地址操作按钮 */
.address-actions {
  display: flex;
  border-top: 1px solid #f0f0f0;
  background-color: #fafafa;
}

.action-item {
  flex: 1;
  padding: 12px 0;
  text-align: center;
  border-right: 1px solid #e0e0e0;
}

.action-item:last-child {
  border-right: none;
}

.action-item.delete {
  background-color: #fff1f0;
}

.action-text {
  font-size: 14px;
  color: #666;
}

.action-item.delete .action-text {
  color: #ff4d4f;
}

/* 空地址状态 */
.empty-address {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60px 0;
  min-height: calc(100vh - 120px); /* 确保在空状态下也能正常显示 */
  justify-content: center;
}

.empty-icon {
  width: 80px;
  height: 80px;
  opacity: 0.5;
  margin-bottom: 16px;
}

.empty-text {
  font-size: 14px;
  color: #999;
}

/* 添加新地址按钮 - 固定在底部 */
.add-address-btn {
  position: fixed;
  bottom: 20px;
  left: 16px;
  right: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 16px;
  background-color: #ff4d4f;
  color: #fff;
  border-radius: 28px;
  font-size: 16px;
  box-shadow: 0 4px 12px rgba(255, 77, 79, 0.3);
  z-index: 100;
}

.add-icon {
  width: 20px;
  height: 20px;
  margin-right: 8px;
}

.add-text {
  font-weight: 500;
}

/* 响应式调整 */
@media (min-width: 768px) {
  .page-header {
    width: 100%;
  }
  
  .address-list-container {
    max-width: 768px;
    margin: 50px auto 70px auto;
  }
  
  .add-address-btn {
    max-width: 736px;
    left: 50%;
    transform: translateX(-50%);
  }
}

/* 隐藏滚动条但保持滚动功能 */
.address-list-container::-webkit-scrollbar {
  width: 0;
  height: 0;
}

/* 动画效果 */
.address-item:active .address-content {
  background-color: rgba(0, 0, 0, 0.02);
}

.action-item:active {
  opacity: 0.7;
}

.add-address-btn:active {
  background-color: #d32f2f;
}