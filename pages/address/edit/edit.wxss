/* 编辑地址页面样式 - 无边框设计 */
.edit-address-container {
  min-height: 100vh;
  background-color: #ffffff;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
}

.header-left, .header-right {
  width: 30px;
}

.back-icon {
  width: 20px;
  height: 20px;
}

.header-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

.save-btn {
  font-size: 16px;
  color: #ff4d4f;
}

/* 表单内容 */
.form-container {
  background-color: #fff;
  padding: 0 16px;
}

.form-item {
  padding: 16px 0;
}

.form-label {
  font-size: 15px;
  color: #333;
  margin-bottom: 8px;
  display: block;
}

.form-input {
  width: 100%;
  font-size: 15px;
  color: #333;
  padding: 8px 0;
  background-color: transparent;
}

.form-textarea {
  width: 100%;
  font-size: 15px;
  color: #333;
  padding: 8px 0;
  min-height: 80px;
  line-height: 1.5;
  resize: none;
  background-color: transparent;
}

/* 称谓选择样式 */
.salutation-group {
  display: flex;
  gap: 20px;
}

.salutation-item {
  padding: 8px 16px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 14px;
  color: #666;
}

.salutation-item.active {
  border-color: #ff4d4f;
  background-color: #ff4d4f;
  color: #fff;
}

/* 地区选择网格样式 */
.region-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  margin-top: 8px;
}

.region-item {
  padding: 8px 16px;
  background-color: #f0f0f0;
  border-radius: 6px;
  font-size: 14px;
  color: #333;
}

.region-item.active {
  background-color: #ff4d4f;
  color: #fff;
}

/* 腾讯地图定位样式 */
.map-section {
  margin-top: 8px;
}

.map-location-btn {
  width: 100%;
  padding: 12px;
  background-color: #1890ff;
  color: #fff;
  border-radius: 6px;
  font-size: 14px;
  margin-bottom: 8px;
}

.location-info {
  padding: 8px;
  background-color: #f0f0f0;
  border-radius: 6px;
}

.location-text {
  font-size: 13px;
  color: #666;
  display: block;
}

/* 复选框样式 */
.checkbox-item {
  display: flex;
  align-items: center;
}

.checkbox {
  width: 20px;
  height: 20px;
  margin-right: 12px;
}

.checkbox-label {
  font-size: 15px;
  color: #333;
}

/* 响应式调整 */
@media (min-width: 768px) {
  .edit-address-container {
    max-width: 768px;
    margin: 0 auto;
  }
}

/* 交互效果 */
.salutation-item:active,
.region-item:active {
  opacity: 0.7;
}

.save-btn:active {
  opacity: 0.7;
}
.map-location-btn:active {
  opacity: 0.7;
}