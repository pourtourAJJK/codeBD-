/* 全局页面容器 */
.page-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}
.nav-back {
  font-size: 36rpx;
  color: #333;
  margin-right: 20rpx;
}
.nav-title {
  font-size: 32rpx;
  font-weight: 500;
  flex: 1;
  text-align: center;
  color: #333;
}
.nav-right {
  width: 36rpx;
}

/* 模块容器 */
.section {
  background-color: #fff;
  margin-top: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.section-title {
  font-size: 28rpx;
  color: #999;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

/* 信息条目通用样式 */
.info-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.info-item:last-child {
  border-bottom: none;
}
.info-label {
  font-size: 30rpx;
  color: #333;
  width: 120rpx;
}
.info-content {
  flex: 1;
  text-align: right;
}

/* 头像样式 */
.avatar-img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

/* 输入框样式 */
.info-input {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: #333;
  padding: 5rpx 0;
}

/* 选择器样式 */
.info-select {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: #333;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 静态文本样式 */
.info-content-static {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: #333;
}

/* 验证码条目样式 */
.verify-code-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.verify-input {
  flex: 1;
  text-align: right;
  padding-right: 20rpx;
  font-size: 30rpx;
  color: #333;
}

/* 验证码按钮样式 */
.get-code-btn {
  width: 200rpx;
  padding: 10rpx 0;
  font-size: 24rpx;
  background-color: #4cd964;
  color: #fff;
  border-radius: 8rpx;
  border: none;
}
.btn-disabled {
  background-color: #999 !important;
  color: #eee !important;
}

/* 保存按钮样式 */
.save-btn {
  margin: 40rpx 20rpx 20rpx;
  padding: 15rpx 0;
  background-color: #4cd964;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
  border: none;
}
.save-btn::after {
  border: none;
}