/* 页面基础样式 */
.info-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-top: 20rpx;
}

/* 头部导航 */
.header {
  display: flex;
  align-items: center;
  height: 80rpx;
  background-color: #fff;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}
.back-btn {
  width: 60rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
}
.back-icon {
  font-size: 36rpx;
  color: #333;
}
.title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 信息模块 */
.info-module {
  background-color: #fff;
  border-radius: 16rpx;
  margin: 0 30rpx 20rpx;
  padding: 20rpx 0;
}
.module-title {
  font-size: 28rpx;
  color: #999;
  padding: 0 30rpx 15rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

/* 信息项 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

/* 确保picker组件占据剩余空间 */
.info-item picker {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}
.info-item:last-child {
  border-bottom: none;
}
.item-label {
  font-size: 30rpx;
  color: #333;
}
.item-content {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  flex: 1;
  text-align: right;
}
.content-text {
  font-size: 30rpx;
  color: #666;
  margin-right: 10rpx;
}
/* 带箭头的项 */
.arrow-item .arrow-icon {
  width: 20rpx;
  height: 20rpx;
}
/* 头像样式 */
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

/* 头像提示文字 */
.avatar-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 昵称输入框 */
.nickname-input {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: #333;
  margin-right: 20rpx;
  padding: 10rpx;
  border-bottom: 1rpx solid #eee;
}

/* 同步按钮 */
.sync-btn {
  width: 160rpx;
  height: 60rpx;
  font-size: 24rpx;
  background-color: #4cd964;
  color: #fff;
  border-radius: 8rpx;
  padding: 0;
  line-height: 60rpx;
}

.sync-btn::after {
  border: none;
}

/* 自定义生日选择器样式 */
.picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  z-index: 1000;
}

/* 遮罩层 */
.picker-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

/* 选择器内容 */
.picker-content {
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  position: relative;
  z-index: 1;
}

/* 选择器标题栏 */
.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.picker-cancel, .picker-confirm {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx 20rpx;
}

.picker-confirm {
  color: #4cd964;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

/* 选择器滚轮容器 */
.picker-wheel-container {
  height: 400rpx;
  overflow: hidden;
}

/* 选择器滚轮 */
.picker-wheel {
  width: 100%;
  height: 400rpx;
}

/* 滚轮选项 */
.picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
}