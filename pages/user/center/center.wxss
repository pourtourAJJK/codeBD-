/* 页面基础样式 */
.user-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 顶部用户横幅 */
.user-banner {
  position: relative;
  height: 255rpx;
  width: 100%;
}
.banner-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

/* 叠加图片样式 */
.overlay-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: contain;
  z-index: 1;
  transform: scale(0.9);
  transform-origin: center;
}

.user-info {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  z-index: 2; /* 确保用户信息显示在叠加图片上方 */
}
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #fff;
}
.user-detail {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.user-name {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
}
.user-phone {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}
.setting-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: auto;
}

/* 我的订单模块 */
.order-module {
  background-color: #fff;
  border-radius: 16rpx;
  margin: 20rpx 30rpx 20rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  position: relative;
  z-index: 3;
}
.module-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.module-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}
.view-all {
  font-size: 26rpx;
  color: #999;
}
.order-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.order-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
  margin-bottom: 20rpx;
}
.order-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.order-icon image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.order-text {
  font-size: 28rpx;
  color: #666;
}

/* 会员模块 */
.member-module {
  background-color: #fff9e6;
  border-radius: 16rpx;
  margin: 0 30rpx 20rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}
.member-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.member-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.member-title {
  font-size: 28rpx;
  color: #e67e22;
  flex: 1;
}
.member-enter {
  font-size: 26rpx;
  color: #e67e22;
  font-weight: 600;
}
.member-benefit {
  display: flex;
  justify-content: space-between;
}
.benefit-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33%;
}
.benefit-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}
.benefit-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  line-height: 1.4;
}

/* 优惠券&兑换卡模块 */
.card-module {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 16rpx;
  margin: 0 30rpx 20rpx;
  padding: 0;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}
.card-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 49%;
  height: 120rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-right: 1rpx solid #f5f5f5;
}
.card-item:last-child {
  border-right: none;
}
.card-count {
  font-size: 36rpx;
  color: #e74c3c;
  font-weight: 600;
  margin-right: 10rpx;
}
.card-name {
  font-size: 28rpx;
  color: #333;
}
.card-arrow {
  width: 20rpx;
  height: 20rpx;
  margin-left: auto;
}

/* 我的服务模块 */
.service-module {
  background-color: #fff;
  border-radius: 16rpx;
  margin: 0 30rpx 120rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}
.service-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 35rpx;
}
.service-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
  margin-bottom: 25rpx;
}
.service-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 15rpx;
}
.service-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

/* 新增图片展示样式 */
.my-image-section {
  margin: 0 30rpx 120rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.my-image {
  width: 100%;
  display: block;
}



/* 适配底部安全区 */
@media (bottom: constant(safe-area-inset-bottom)) {
  .user-page {
    padding-bottom: constant(safe-area-inset-bottom);
  }
}
@media (bottom: env(safe-area-inset-bottom)) {
  .user-page {
    padding-bottom: env(safe-area-inset-bottom);
  }
}