/* 地址编辑页样式 */
.address-edit {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 页面标题 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 48px;
  padding: 0 16px;
  background-color: #fff;
  border-bottom: 1px solid #e5e5e5;
}

.back-btn {
  width: 24px;
  height: 24px;
}

.back-btn image {
  width: 100%;
  height: 100%;
}

.page-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

.save-btn {
  font-size: 16px;
  color: #ff6b6b;
  font-weight: 500;
}

/* 表单内容 */
.address-form {
  background-color: #fff;
  margin-top: 10px;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #f0f0f0;
}

.form-label {
  width: 80px;
  font-size: 16px;
  color: #333;
}

.form-input {
  flex: 1;
  font-size: 16px;
  color: #666;
  padding: 0 10px;
}

.form-picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 10px;
}

.picker-text {
  font-size: 16px;
  color: #666;
}

.picker-arrow {
  width: 16px;
  height: 16px;
  opacity: 0.5;
}

.form-textarea {
  flex: 1;
  font-size: 16px;
  color: #666;
  padding: 10px;
  line-height: 1.5;
  min-height: 80px;
}

/* 默认地址开关 */
.default-item {
  justify-content: space-between;
}

.default-item .form-label {
  width: auto;
}

switch {
  transform: scale(0.8);
}