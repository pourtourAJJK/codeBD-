<!-- 地址编辑页 -->
<view class="address-edit">
  <!-- 页面标题 -->
  <view class="page-header">
    <view class="back-btn" bindtap="navigateBack">
      <image src="/images/back-arrow.png" mode="aspectFit"></image>
    </view>
    <view class="page-title">{{isEdit ? '编辑地址' : '新增地址'}}</view>
    <view class="save-btn" bindtap="saveAddress">保存</view>
  </view>

  <!-- 表单内容 -->
  <form class="address-form" bindsubmit="saveAddress">
    <!-- 联系人 -->
    <view class="form-item">
      <view class="form-label">联系人</view>
      <input 
        class="form-input" 
        name="name" 
        placeholder="请输入联系人姓名"
        value="{{formData.name}}"
        bindinput="onInputChange"
        data-field="name"
      />
    </view>

    <!-- 手机号 -->
    <view class="form-item">
      <view class="form-label">手机号</view>
      <input 
        class="form-input" 
        name="phone" 
        type="number"
        placeholder="请输入手机号"
        value="{{formData.phone}}"
        bindinput="onInputChange"
        data-field="phone"
      />
    </view>

    <!-- 省市区选择 -->
    <view class="form-item">
      <view class="form-label">所在地区</view>
      <picker 
        class="form-picker" 
        mode="region" 
        value="{{formData.region}}"
        bindchange="onRegionChange"
      >
        <view class="picker-text">{{formData.region[0]}}{{formData.region[1]}}{{formData.region[2]}}</view>
        <image class="picker-arrow" src="/images/arrow-right.png" mode="aspectFit"></image>
      </picker>
    </view>

    <!-- 详细地址 -->
    <view class="form-item">
      <view class="form-label">详细地址</view>
      <textarea 
        class="form-textarea" 
        name="detail" 
        placeholder="请输入详细地址（街道、门牌号等）"
        value="{{formData.detail}}"
        bindinput="onInputChange"
        data-field="detail"
        auto-height
        maxlength="200"
      />
    </view>

    <!-- 设为默认地址 -->
    <view class="form-item default-item">
      <view class="form-label">设为默认地址</view>
      <switch 
        name="isDefault" 
        checked="{{formData.isDefault}}"
        bindchange="onSwitchChange"
      />
    </view>
  </form>
</view>