/* 地址列表页样式 */
.address-list {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 页面标题 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 48px;
  padding: 0 16px;
  background-color: #fff;
  border-bottom: 1px solid #e5e5e5;
}

.back-btn, .right-btn {
  width: 24px;
  height: 24px;
}

.back-btn image, .right-btn image {
  width: 100%;
  height: 100%;
}

.page-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

/* 地址列表 */
.address-items {
  padding: 12px;
}

.address-item {
  background-color: #fff;
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.address-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 12px;
}

.user-name {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.user-phone {
  font-size: 14px;
  color: #666;
}

.default-tag {
  background-color: #ff4757;
  color: #fff;
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 12px;
}

.address-content {
  font-size: 14px;
  color: #666;
  line-height: 1.5;
  margin-bottom: 12px;
}

.address-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16px;
}

.action-btn {
  font-size: 14px;
  padding: 4px 8px;
  border-radius: 4px;
}

.edit-btn {
  color: #666;
  border: 1px solid #ddd;
}

.delete-btn {
  color: #ff4757;
  border: 1px solid #ff4757;
}

.default-btn {
  color: #2ed573;
  border: 1px solid #2ed573;
}

/* 空地址提示 */
.empty-address {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
  text-align: center;
}

.empty-address image {
  width: 120px;
  height: 120px;
  margin-bottom: 20px;
}

.empty-text {
  font-size: 16px;
  color: #999;
  margin-bottom: 30px;
}

.empty-address .add-btn {
  width: 200px;
  height: 44px;
  background-color: #ff6b6b;
  color: #fff;
  border-radius: 22px;
  font-size: 16px;
  line-height: 44px;
}

/* 添加地址按钮 */
.add-address-btn {
  position: fixed;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  height: 50px;
  background-color: #ff6b6b;
  color: #fff;
  border-radius: 25px;
  font-size: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  box-shadow: 0 4px 12px rgba(255, 107, 107, 0.3);
}

.add-address-btn image {
  width: 20px;
  height: 20px;
}