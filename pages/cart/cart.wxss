/* 购物车页面样式 */
.cart-container {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 60px;
}

/* 购物车头部样式 */
.cart-header {
  display: flex;
  justify-content: flex-end;
  padding: 10px 16px;
  background-color: #fff;
  border-bottom: 1px solid #e0e0e0;
  margin-bottom: 16rpx;
}

/* 管理按钮样式 */
.manage-btn {
  padding: 8px 16px;
  font-size: 14px;
  color: #007aff;
  border: 1px solid #007aff;
  border-radius: 20px;
  background-color: #fff;
  transition: all 0.3s ease;
}

.manage-btn:active {
  background-color: #007aff;
  color: #fff;
  transform: scale(0.95);
}

/* 价格信息样式 */
.price-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-right: 16px;
}

.discount-info {
  display: flex;
  align-items: center;
  margin-top: 4px;
}

.discount-label {
  font-size: 12px;
  color: #999;
  margin-right: 4px;
}

.discount-value {
  font-size: 14px;
  color: #52c41a;
  margin-right: 8px;
}

.discount-detail {
  font-size: 12px;
  color: #007aff;
  text-decoration: underline;
}



/* 空购物车样式 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
  text-align: center;
  margin: 16rpx;
}

.empty-icon-container {
  margin-bottom: 30rpx;
}

.soft-empty-icon {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(47, 143, 199, 0.1);
  border-radius: 50%;
}

.empty-cart-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.6;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-subtext {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.go-shopping-btn {
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #2F8FC7 0%, #1296db 100%);
  color: #fff;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  padding: 0 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(47, 143, 199, 0.3);
  transition: all 0.3s ease;
}

.go-shopping-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(47, 143, 199, 0.4);
}

/* 购物车列表样式 */
.cart-list {
  margin: 16rpx;
  margin-bottom: 10px;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  border: 1px solid #e8e8e8;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background-color: #fff;
  margin-bottom: 1px;
  position: relative;
  border-bottom: 1px solid #f0f0f0;
}

.cart-item:last-child {
  border-bottom: none;
}

/* 新增：商品信息区包含图片 */
.cart-item-info {
  flex: 1;
  display: flex;
  align-items: center;
  min-width: 0;
}

.cart-item-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
  background: #f5f5f5;
  object-fit: cover;
}

.cart-item-desc {
  flex: 1;
  min-width: 0;
}

.cart-item-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.cart-item-spec {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
}

.checkbox-container {
  margin-right: 12px;
}

.checkbox-container checkbox {
  transform: scale(1.2);
}

.item-content {
  flex: 1;
  display: flex;
  align-items: center;
}

.item-image {
  width: 80px;
  height: 80px;
  background-color: #f0f0f0;
  border-radius: 4px;
  margin-right: 12px;
}

.item-info {
  flex: 1;
  min-width: 0;
}

.item-title {
  font-size: 14px;
  color: #333;
  line-height: 1.5;
  margin-bottom: 4px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-spec {
  font-size: 12px;
  color: #999;
  margin-bottom: 8px;
}


.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-price {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 12px;
  color: #ff4d4f;
  margin-right: 2px;
}

.price-value {
  font-size: 16px;
  font-weight: 600;
  color: #ff4d4f;
}

.original-price {
  font-size: 12px;
  color: #999;
  text-decoration: line-through;
  margin-left: 6px;
}

.stock-warning {
  font-size: 12px;
  color: #ff4d4f;
}

/* 数量控制样式 */
.quantity-control {
  display: flex;
  align-items: center;
  margin-left: 12px;
}

.quantity-btn {
  width: 28px;
  height: 28px;
  line-height: 26px;
  text-align: center;
  font-size: 18px;
  border: 1px solid #e0e0e0;
  border-radius: 4px;
  background-color: #fff;
  color: #333;
}

.quantity-btn.minus {
  border-right: none;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}

.quantity-btn.plus {
  border-left: none;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}

.quantity-input {
  width: 40px;
  height: 28px;
  border: 1px solid #e0e0e0;
}

.quantity-num {
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 14px;
  border: none;
  background-color: #f5f5f5;
}

/* 删除按钮样式 */
.delete-btn {
  position: absolute;
  top: 12px;
  right: 16px;
  width: 20px;
  height: 20px;
  opacity: 0.6;
}

.delete-btn image {
  width: 100%;
  height: 100%;
}

.delete-btn:active {
  opacity: 1;
}

/* 底部结算栏样式 */
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 10px 16px;
  background-color: #fff;
  border-top: 1px solid #e0e0e0;
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.1);
}

.select-all {
  display: flex;
  align-items: center;
  margin-right: 16px;
}

.select-all checkbox {
  transform: scale(1.2);
  margin-right: 6px;
}

.select-all-text {
  font-size: 14px;
  color: #333;
}

.footer-content {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-price {
  display: flex;
  align-items: baseline;
}

.total-label {
  font-size: 14px;
  color: #333;
  margin-right: 4px;
}

.total-value {
  display: flex;
  align-items: baseline;
}

.price-number {
  font-size: 20px;
  font-weight: 600;
  color: #ff4d4f;
}

.action-buttons {
  display: flex;
}

.delete-selected-btn {
  width: 100px;
  height: 36px;
  line-height: 36px;
  background-color: #fff;
  color: #ff4d4f;
  border: 1px solid #ff4d4f;
  border-radius: 4px;
  font-size: 14px;
  margin-left: 12px;
}

.delete-selected-btn[disabled] {
  color: #ccc;
  border-color: #ccc;
}

.checkout-btn {
  width: 120px;
  height: 36px;
  line-height: 36px;
  background-color: #ff4d4f;
  color: #fff;
  border: none;
  border-radius: 4px;
  font-size: 14px;
}

.checkout-btn[disabled] {
  background-color: #ccc;
}

/* 错误提示样式 */
.error-message {
  padding: 16px;
  text-align: center;
  font-size: 14px;
  color: #ff4d4f;
}

.retry-btn {
  color: #007aff;
  margin-left: 8px;
}

/* 响应式调整 */
@media (min-width: 768px) {
  .cart-container {
    max-width: 768px;
    margin: 0 auto;
  }
  
  .cart-footer {
    max-width: 768px;
    margin: 0 auto;
    left: 50%;
    transform: translateX(-50%);
  }
}

/* 动画效果 */
.cart-item {
  transition: all 0.3s ease;
}

.cart-item:active {
  background-color: #f5f5f5;
}

.quantity-btn:active {
  background-color: #f5f5f5;
}

/* 推荐商品区域样式 */
.recommend-section {
  margin-top: 30rpx;
  background-color: white;
  margin-bottom: 20rpx;
}

/* 猜你喜欢标题样式 */
.guess-like-title {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin: 20rpx 0;
  background-color: transparent;
}

/* 首页热门商品样式继承 */
.hot-products {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 10rpx 20rpx;
  background-color: white;
  margin-bottom: 20rpx;
}

.product-item {
  width: 49%;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s;
  position: relative;
}

.product-item:active {
  transform: scale(0.98);
}

.product-content {
  width: 100%;
  height: 100%;
}

.product-image {
  width: 100%;
  height: auto;
  box-shadow: 0 1px 2px #00000020;
}

.product-info {
  flex: 1;
  padding: 24rpx;
  padding-bottom: 24rpx;
  min-height: 200rpx;
}

/* 加购按钮样式 */
.add-cart-btn {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background-color: #ff6b81;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 129, 0.3);
  transition: all 0.2s ease;
  z-index: 10;
}

.add-cart-btn:active {
  transform: scale(1.1);
  background-color: #ff4757;
}

.cart-icon {
  width: 36rpx;
  height: 36rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 48rpx;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  min-height: 96rpx;
  display: flex;
  align-items: flex-start;
}

.product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.product-spec {
  font-size: 28rpx;
  color: #666;
}

.product-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4757;
}

/* 解决输入框在iOS上的样式问题 */
.quantity-num::-webkit-inner-spin-button,
.quantity-num::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

.quantity-num {
  -moz-appearance: textfield;
}

/* 新购物车商品项样式 */
.cart-item-check {
  margin-right: 12px;
}

.cart-item-check checkbox {
  transform: scale(1.2);
}

.cart-item-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.cart-item-img {
  width: 80px;
  height: 80px;
  object-fit: cover;
  margin-right: 12px;
  border-radius: 4px;
}

.cart-item-desc {
  display: flex;
  flex-direction: column;
  gap: 4px;
  flex: 1;
  min-width: 0;
}

.cart-item-name {
  font-size: 14px;
  color: #333;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.cart-item-spec {
  font-size: 12px;
  color: #999;
}

.cart-item-operate {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 12px;
  margin-right: 40px; /* 为删除按钮留出空间 */
}

.cart-item-price {
  font-size: 16px;
  color: #ff4d4f;
  font-weight: 600;
}

.cart-item-count {
  display: flex;
  align-items: center;
}

.count-btn {
  width: 28px;
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border: 1px solid #e0e0e0;
  font-size: 18px;
  color: #333;
}

.count-btn.minus {
  border-radius: 4px 0 0 4px;
  border-right: none;
}

.count-btn.plus {
  border-radius: 0 4px 4px 0;
  border-left: none;
}

.count-input {
  width: 40px;
  height: 28px;
  text-align: center;
  font-size: 14px;
  border: 1px solid #e0e0e0;
  border-left: none;
  border-right: none;
  background-color: #fff;
}