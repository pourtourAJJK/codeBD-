/* 关于页面样式 */
.about-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 设置项列表 */
.setting-list {
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

/* 设置项样式 */
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
}

.setting-item:last-child {
  border-bottom: none;
}

/* 设置项文字 */
.setting-text {
  font-size: 30rpx;
  color: #333333;
}

/* 设置项箭头 */
.setting-arrow {
  width: 20rpx;
  height: 20rpx;
  opacity: 0.6;
}