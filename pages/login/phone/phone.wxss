/* pages/login/phone/phone.wxss */
page {
  background-color: #ffffff;
}

.container {
  padding: 100rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.phone-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.description {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 80rpx;
}

.phone-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 45rpx;
  color: #fff;
  background: linear-gradient(90deg, #07c160, #05a754);
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  box-shadow: 0 4px 12px rgba(7, 193, 96, 0.2);
}

.skip-btn {
  font-size: 28rpx;
  color: #999;
  padding: 20rpx;
}
