/* 预约送水页面样式 */
.reserve-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 15px;
  background-color: #2F8FC7;
  color: white;
  height: 50px;
}

.header-left {
  width: 50px;
}

.back-icon {
  font-size: 24px;
  color: white;
}

.header-title {
  font-size: 18px;
  font-weight: 600;
}

.header-right {
  width: 50px;
}

/* 表单容器 */
.form-container {
  background-color: #fff;
  margin-top: 10px;
}

/* 表单项 */
.form-item {
  padding: 15px;
  border-bottom: 1px solid #f0f0f0;
}

.form-label {
  display: block;
  font-size: 14px;
  color: #333;
  margin-bottom: 10px;
}

/* 日期选择器 */
.picker-content {
  font-size: 16px;
  color: #666;
  padding: 10px;
  background-color: #f9f9f9;
  border-radius: 8px;
}

/* 时间段选择 */
.time-slots {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.time-slot {
  padding: 10px 15px;
  background-color: #f9f9f9;
  border-radius: 20px;
  font-size: 14px;
  color: #666;
  cursor: pointer;
  border: 1px solid #e0e0e0;
}

.time-slot.selected {
  background-color: #2F8FC7;
  color: white;
  border-color: #2F8FC7;
}

.time-slot.disabled {
  background-color: #f0f0f0;
  color: #ccc;
  cursor: not-allowed;
}

/* 地址信息 */
.address-info {
  padding: 10px;
  background-color: #f9f9f9;
  border-radius: 8px;
}

.address-receiver {
  display: block;
  font-size: 16px;
  color: #333;
  margin-bottom: 5px;
}

.address-detail {
  display: block;
  font-size: 14px;
  color: #666;
  line-height: 1.4;
}

/* 备注输入 */
.notes-input {
  width: 100%;
  min-height: 100px;
  padding: 10px;
  background-color: #f9f9f9;
  border-radius: 8px;
  font-size: 14px;
  color: #333;
  line-height: 1.5;
  box-sizing: border-box;
}

/* 提交按钮 */
.submit-btn {
  margin: 20px 15px;
  padding: 15px;
  background-color: #2F8FC7;
  border-radius: 8px;
  text-align: center;
}

.btn-text {
  color: white;
  font-size: 16px;
  font-weight: 600;
}