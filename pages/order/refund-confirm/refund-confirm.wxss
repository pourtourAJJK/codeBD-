.confirm-page { min-height: 100vh; background: #f5f5f5; padding: 16rpx 0 160rpx; }
.header { text-align: center; font-size: 34rpx; font-weight: 600; color: #111; margin-bottom: 16rpx; }
.item-card { display: flex; background: #fff; margin: 0 16rpx 16rpx; border-radius: 12rpx; padding: 16rpx; box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.06); }
.item-img { width: 160rpx; height: 160rpx; border-radius: 12rpx; background: #f2f2f2; margin-right: 16rpx; }
.item-info { flex: 1; display: flex; flex-direction: column; gap: 10rpx; }
.item-title { font-size: 30rpx; color: #111; line-height: 1.4; }
.item-spec { font-size: 24rpx; color: #888; }
.item-price { font-size: 32rpx; color: #e11; font-weight: 700; }
.form { background: #fff; margin: 0 16rpx; border-radius: 12rpx; padding: 8rpx 16rpx 24rpx; display: flex; flex-direction: column; gap: 12rpx; }
.form-row { display: flex; justify-content: space-between; align-items: center; padding: 18rpx 0; border-bottom: 1rpx solid #f0f0f0; font-size: 28rpx; color: #333; }
.form-row:last-child { border-bottom: none; }
.value { color: #999; }
.amount-row { padding: 10rpx 0; }
.amount { font-size: 32rpx; color: #e11; font-weight: 700; margin: 6rpx 0; }
.tips { font-size: 22rpx; color: #777; }
.desc-block { padding: 10rpx 0; }
.desc-block textarea { width: 100%; min-height: 180rpx; background: #f8f8f8; border-radius: 10rpx; padding: 14rpx; font-size: 26rpx; color: #333; box-sizing: border-box; }
.count { text-align: right; color: #999; font-size: 24rpx; margin-top: 6rpx; }
.footer { position: fixed; left: 0; right: 0; bottom: 0; background: #fff; padding: 12rpx 24rpx env(safe-area-inset-bottom); box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.08); }
.confirm-btn { width: 100%; background: #e11; color: #fff; border: none; border-radius: 999rpx; padding: 22rpx 0; font-size: 32rpx; }
