/* 订单详情页面样式 */
.order-detail {
  background-color: #f7f7f7;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 订单状态 */
.order-status {
  background-color: #fff;
  padding: 40rpx 30rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.status-text {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

/* 地址信息 */
.address-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.address-content {
  padding-left: 40rpx;
  position: relative;
}

.address-content::before {
  content: "\e647";
  font-family: "iconfont";
  position: absolute;
  left: 0;
  top: 10rpx;
  font-size: 36rpx;
  color: #ff6b6b;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.name {
  font-size: 32rpx;
  color: #333;
  margin-right: 30rpx;
}

.phone {
  font-size: 32rpx;
  color: #666;
}

.address-detail {
  font-size: 28rpx;
  color: #666;
  line-height: 44rpx;
}

/* 商品列表 */
.goods-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.goods-list {
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.goods-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-spec {
  font-size: 24rpx;
  color: #999;
  margin: 10rpx 0;
}

.goods-price-count {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.count {
  font-size: 28rpx;
  color: #666;
}

/* 订单信息 */
.order-info-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.order-info {
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
  max-width: 60%;
  text-align: right;
}

/* 价格明细 */
.price-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.price-info {
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
}

.discount {
  color: #ff6b6b;
}

.total {
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
  margin-top: 10rpx;
}

.total .label {
  font-size: 32rpx;
  font-weight: bold;
}

.total-value {
  font-size: 36rpx;
  color: #ff6b6b;
  font-weight: bold;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 12rpx 18rpx;
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  justify-content: center;
}

.pill-group {
  display: flex;
  gap: 10rpx;
}

.pill-btn {
  padding: 8rpx 18rpx;
  font-size: 24rpx;
  color: #3b4252;
  background-color: #fff;
  border: 1rpx solid #d0d5dd;
  border-radius: 999rpx;
  min-width: 118rpx;
  text-align: center;
  line-height: 1.45;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.pill-danger {
  background-color: #fff7eb;
  border-color: #f59e0b;
  color: #b45309;
  box-shadow: 0 4rpx 12rpx rgba(245, 158, 11, 0.18);
}

.pill-btn::after {
  border: none;
}



