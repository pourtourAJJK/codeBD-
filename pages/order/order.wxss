/* 订单列表页面样式 - 与图一/图二完全一致 */

/* 基础样式 */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  font-size: 28rpx;
  padding-bottom: 100rpx;
}

/* 标签切换栏 */
.tab-bar {
  display: flex;
  background-color: #ffffff;
  border-bottom: 1rpx solid #eee;
  overflow-x: auto;
  white-space: nowrap;
  padding: 0 20rpx;
}
.tab-item {
  padding: 0 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #666;
  position: relative;
}
.tab-item.active {
  color: #ff6b6b;
  font-weight: bold;
}
.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #ff6b6b;
  border-radius: 2rpx;
}

/* 加载状态 */
.loading {
  padding: 80rpx 0;
  text-align: center;
  color: #888;
  background-color: #ffffff;
}
.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  margin: 0 auto 20rpx;
  border: 4rpx solid #eee;
  border-top-color: #ff6b6b;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}
@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 错误提示 */
.error {
  padding: 30rpx;
  text-align: center;
  color: #f43f30;
  background-color: #fff8f8;
  margin: 20rpx;
  border-radius: 10rpx;
}

/* 空订单提示 */
.empty {
  padding: 150rpx 0;
  text-align: center;
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 10rpx;
}
.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}
.empty-text {
  color: #888;
  display: block;
  margin-bottom: 40rpx;
}
.empty-btn {
  background-color: #ff6b6b;
  color: #fff;
  padding: 15rpx 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

/* 订单卡片 - 图二风格 */
.order-card {
  background-color: #ffffff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 店铺信息 */
.shop-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: #fafafa;
}
.shop-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
.order-status {
  font-size: 28rpx;
  font-weight: 500;
}

/* 订单信息 */
.order-info {
  padding: 20rpx 30rpx;
  background-color: #fefefe;
}
.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.info-label {
  color: #666;
  font-size: 26rpx;
}
.info-value {
  color: #333;
  font-size: 26rpx;
}

/* 商品列表 */
.product-list {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f5f5f5;
}
.product-item {
  display: flex;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f9f9f9;
}
.product-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}
.product-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}
.product-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.product-name {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  color: #333;
  line-height: 1.4;
  font-size: 28rpx;
}
.product-spec {
  color: #888;
  font-size: 24rpx;
  margin: 10rpx 0;
}
.product-price-count {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.product-price {
  color: #ff6b6b;
  font-weight: bold;
  font-size: 28rpx;
}
.product-count {
  color: #888;
  font-size: 26rpx;
}
.product-more {
  text-align: right;
  color: #888;
  padding-top: 15rpx;
  font-size: 24rpx;
}

/* 金额信息 */
.amount-info {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f5f5f5;
  background-color: #fefefe;
}
.amount-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.amount-label {
  color: #666;
  font-size: 26rpx;
}
.amount-value {
  color: #333;
  font-size: 26rpx;
}
.amount-total {
  display: flex;
  justify-content: space-between;
  padding-top: 15rpx;
  border-top: 1rpx dashed #f0f0f0;
  margin-top: 10rpx;
}
.total-label {
  color: #333;
  font-weight: 500;
  font-size: 28rpx;
}
.total-value {
  color: #ff6b6b;
  font-weight: bold;
  font-size: 30rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding: 25rpx 30rpx;
  border-top: 1rpx solid #f5f5f5;
  background-color: #fafafa;
}
.btn-secondary {
  background-color: #ffffff;
  color: #666;
  border: 1rpx solid #ddd;
  padding: 12rpx 30rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  line-height: 1.2;
}
.btn-primary {
  background-color: #ff6b6b;
  color: #ffffff;
  padding: 12rpx 30rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  line-height: 1.2;
}