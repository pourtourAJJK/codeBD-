/* 微信支付JSAPI统一下单功能 - 前端调起支付示例页面样式 */

/* 容器样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.page-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 商品卡片 */
.product-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.product-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-left: 20rpx;
}

.product-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 支付状态 */
.pay-status {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.status-content {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.status-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 12rpx;
}

.status-value {
  font-size: 24rpx;
  font-weight: bold;
}

.status-value.success {
  color: #52c41a;
}

.status-value.failed {
  color: #ff4d4f;
}

.status-value.paying {
  color: #1890ff;
}

.status-message {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
  padding-top: 8rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 支付结果 */
.pay-result {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.result-header {
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.result-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 24rpx;
}

.result-label {
  color: #666;
  width: 140rpx;
  flex-shrink: 0;
}

.result-value {
  color: #333;
  flex: 1;
  word-break: break-all;
}

.copy-btn {
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  margin-left: 12rpx;
  background-color: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 4rpx;
  height: 48rpx;
  line-height: 48rpx;
}

.copy-btn:hover {
  background-color: #e0e0e0;
}

/* 操作按钮 */
.action-buttons {
  margin-bottom: 30rpx;
}

.pay-button {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  background-color: #1890ff;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pay-button:hover {
  background-color: #40a9ff;
}

.pay-button[disabled] {
  background-color: #d9d9d9;
  color: #fff;
}

.back-button {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-button:hover {
  background-color: #e0e0e0;
}

/* 提示信息 */
.tips {
  background-color: #fffbe6;
  border: 1rpx solid #ffe58f;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-top: 20rpx;
}

.tips-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #d48806;
  display: block;
  margin-bottom: 8rpx;
}

.tips-content {
  font-size: 22rpx;
  color: #d48806;
  display: block;
  margin-bottom: 4rpx;
  line-height: 1.4;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .container {
    padding: 16rpx;
  }
  
  .page-title {
    font-size: 28rpx;
  }
  
  .page-subtitle {
    font-size: 22rpx;
  }
  
  .product-name {
    font-size: 26rpx;
  }
  
  .product-price {
    font-size: 28rpx;
  }
  
  .result-item {
    font-size: 22rpx;
  }
  
  .result-label {
    width: 120rpx;
  }
}
