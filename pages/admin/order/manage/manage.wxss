/* 订单管理页面样式 */

/* 页面容器 */
.order-manage-container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

/* 搜索和筛选区域 */
.filter-section {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

/* 搜索框 */
.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 0 20rpx;
  margin-right: 15rpx;
  position: relative;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  height: 76rpx;
  font-size: 28rpx;
  color: #333;
  background: transparent;
}

.search-input::placeholder {
  color: #999;
}

.clear-search {
  font-size: 40rpx;
  color: #999;
  margin-left: 15rpx;
  cursor: pointer;
}

/* 筛选按钮 */
.filter-btn {
  display: flex;
  align-items: center;
  background-color: #fff;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  padding: 0 20rpx;
  height: 76rpx;
}

.filter-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
  margin-right: 10rpx;
}

.filter-text {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.5;
}

/* 批量操作栏 */
.batch-operation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.operation-info {
  font-size: 28rpx;
  color: #333;
}

.operation-btns {
  display: flex;
  align-items: center;
}

.batch-btn {
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  margin-left: 15rpx;
  border-radius: 8rpx;
  background-color: #1989fa;
  color: #fff;
}

.batch-btn.cancel {
  background-color: #fff;
  color: #ff6b35;
  border: 1rpx solid #ff6b35;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

/* 订单项 */
.order-item {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

/* 订单头 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-info {
  display: flex;
  flex-direction: column;
}

.order-id {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 26rpx;
  color: #fff;
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
}

/* 订单详情 */
.order-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.product-info {
  display: flex;
  align-items: center;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.product-details {
  display: flex;
  flex-direction: column;
}

.product-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.product-spec {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.product-quantity {
  font-size: 24rpx;
  color: #999;
}

.order-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}

/* 配送信息 */
.delivery-info {
  margin-bottom: 20rpx;
}

.delivery-item {
  display: flex;
  margin-bottom: 10rpx;
}

.delivery-item:last-child {
  margin-bottom: 0;
}

.delivery-label {
  font-size: 26rpx;
  color: #999;
  width: 120rpx;
}

.delivery-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

/* 操作按钮 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.action-btn {
  font-size: 26rpx;
  padding: 10rpx 25rpx;
  margin-left: 15rpx;
  border-radius: 8rpx;
  background-color: #1989fa;
  color: #fff;
}

.action-btn.detail {
  background-color: #fff;
  color: #1989fa;
  border: 1rpx solid #1989fa;
}

.action-btn.cancel {
  background-color: #fff;
  color: #999;
  border: 1rpx solid #eee;
}

/* 选择框 */
.order-checkbox {
  position: absolute;
  top: 30rpx;
  left: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
}

/* 筛选面板 */
.filter-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 20rpx;
  z-index: 1000;
  max-height: 70vh;
  overflow-y: auto;
}

/* 筛选面板头部 */
.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.filter-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.close-filter {
  font-size: 48rpx;
  color: #999;
  cursor: pointer;
}

/* 筛选内容 */
.filter-content {
  padding-bottom: 30rpx;
}

/* 筛选项 */
.filter-item {
  margin-bottom: 40rpx;
}

.filter-item-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

/* 筛选选项 */
.filter-options {
  display: flex;
  flex-wrap: wrap;
}

.filter-option {
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 10rpx 25rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.filter-option.active {
  background-color: #1989fa;
  color: #fff;
}

/* 日期范围 */
.date-range {
  display: flex;
  align-items: center;
}

.date-picker {
  font-size: 28rpx;
  color: #333;
  background-color: #f5f5f5;
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
}

.date-separator {
  font-size: 28rpx;
  color: #999;
  margin: 0 20rpx;
}

/* 筛选面板底部 */
.filter-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

/* 重置按钮 */
.reset-btn {
  flex: 1;
  margin-right: 20rpx;
  height: 80rpx;
  font-size: 32rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  border: none;
}

/* 确认按钮 */
.confirm-btn {
  flex: 1;
  height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #1989fa;
  border-radius: 10rpx;
  border: none;
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}