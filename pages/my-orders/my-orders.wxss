/* 我的订单页面样式 */
.orders-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 15px;
  background-color: #2F8FC7;
  color: white;
  height: 50px;
}

.header-left {
  width: 50px;
}

.back-icon {
  font-size: 24px;
  color: white;
}

.header-title {
  font-size: 18px;
  font-weight: 600;
}

.header-right {
  width: 50px;
}

/* 标签页 */
.tabs {
  display: flex;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.tab-item {
  flex: 1;
  padding: 15px;
  text-align: center;
  font-size: 16px;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #2F8FC7;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 30px;
  height: 3px;
  background-color: #2F8FC7;
  border-radius: 2px;
}

/* 订单列表 */
.orders-list {
  padding: 10px;
}

/* 订单项 */
.order-item {
  background-color: #fff;
  border-radius: 12px;
  margin-bottom: 10px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  border-bottom: 1px solid #f0f0f0;
}

.order-number {
  font-size: 14px;
  color: #666;
}

.order-status {
  font-size: 14px;
  font-weight: 500;
}

.order-status.pending {
  color: #ff9800;
}

.order-status.delivered {
  color: #2196f3;
}

.order-status.completed {
  color: #4caf50;
}

/* 订单商品 */
.order-products {
  padding: 15px;
}

.product-item {
  display: flex;
  margin-bottom: 10px;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 80px;
  height: 80px;
  border-radius: 8px;
  margin-right: 10px;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-title {
  font-size: 14px;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-spec {
  font-size: 12px;
  color: #999;
}

.product-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  font-size: 16px;
  color: #e64340;
  font-weight: 500;
}

.quantity {
  font-size: 14px;
  color: #666;
}

/* 订单底部 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  border-top: 1px solid #f0f0f0;
}

.total-amount {
  font-size: 14px;
  color: #333;
}

.order-actions {
  display: flex;
  gap: 10px;
}

.action-btn {
  padding: 8px 15px;
  border-radius: 20px;
  font-size: 14px;
  border: 1px solid;
}

.action-btn.cancel {
  color: #999;
  border-color: #ddd;
}

.action-btn.confirm {
  color: #2F8FC7;
  border-color: #2F8FC7;
}

.action-btn.detail {
  color: #2F8FC7;
  border-color: #2F8FC7;
}

/* 空订单提示 */
.empty-orders {
  padding: 80px 0;
  text-align: center;
  background-color: #fff;
  margin: 10px;
  border-radius: 12px;
}

.empty-text {
  font-size: 16px;
  color: #999;
}