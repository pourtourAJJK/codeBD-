/* 支付页面样式 */
.pay-container {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 80px;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  background-color: #fff;
  border-bottom: 1px solid #e0e0e0;
  position: sticky;
  top: 0;
  z-index: 10;
}

.header-left, .header-right {
  width: 30px;
}

.back-icon {
  width: 20px;
  height: 20px;
}

.header-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

/* 订单信息 */
.order-info {
  background-color: #fff;
  padding: 12px 16px;
  margin-bottom: 10px;
}

.order-number, .order-time {
  font-size: 14px;
  color: #666;
  margin-bottom: 4px;
}

/* 支付金额 */
.amount-section {
  background-color: #fff;
  padding: 20px 16px;
  margin-bottom: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.amount-label {
  font-size: 16px;
  color: #333;
}

.amount-value {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 16px;
  color: #ff4d4f;
  margin-right: 2px;
}

.price-number {
  font-size: 32px;
  font-weight: 600;
  color: #ff4d4f;
}

/* 支付方式 */
.payment-section {
  background-color: #fff;
  margin-bottom: 10px;
}

.section-title {
  font-size: 14px;
  font-weight: 500;
  color: #333;
  padding: 12px 16px;
  border-bottom: 1px solid #f0f0f0;
}

.payment-options {
  padding: 0 16px;
}

.payment-option {
  display: flex;
  align-items: center;
  padding: 16px 0;
  border-bottom: 1px solid #f0f0f0;
  position: relative;
}

.payment-option:last-child {
  border-bottom: none;
}

.payment-option.active {
  background-color: rgba(255, 77, 79, 0.05);
}

.payment-icon {
  width: 40px;
  height: 40px;
  margin-right: 12px;
}

.payment-icon image {
  width: 100%;
  height: 100%;
}

.payment-info {
  flex: 1;
}

.payment-name {
  font-size: 16px;
  color: #333;
  margin-bottom: 4px;
}

.payment-desc {
  font-size: 12px;
  color: #999;
}

.payment-check {
  width: 20px;
  height: 20px;
}

.check-icon {
  width: 100%;
  height: 100%;
}

/* 支付说明 */
.payment-notes {
  background-color: #fff;
  padding: 16px;
  margin-bottom: 10px;
}

.note-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 8px;
}

.note-item:last-child {
  margin-bottom: 0;
}

.note-icon {
  width: 16px;
  height: 16px;
  margin-right: 8px;
  margin-top: 2px;
  opacity: 0.6;
}

.note-icon image {
  width: 100%;
  height: 100%;
}

.note-text {
  font-size: 12px;
  color: #999;
  line-height: 1.5;
}

/* 底部支付按钮 */
.pay-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 12px 16px;
  background-color: #fff;
  border-top: 1px solid #e0e0e0;
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.1);
}

.pay-btn {
  width: 100%;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ff4d4f;
  color: #fff;
  border: none;
  border-radius: 24px;
  font-size: 16px;
  font-weight: 500;
  line-height: normal;
}

.pay-btn[disabled] {
  background-color: #ccc;
}

.loading-icon {
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 支付结果提示 */
.result-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.result-content {
  width: 80%;
  max-width: 360px;
  background-color: #fff;
  border-radius: 12px;
  padding: 32px 24px;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
}

.result-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 16px;
}

.result-title {
  font-size: 20px;
  font-weight: 600;
  color: #333;
  margin-bottom: 8px;
}

.result-message {
  font-size: 14px;
  color: #666;
  margin-bottom: 24px;
  text-align: center;
}

.result-actions {
  display: flex;
  gap: 12px;
  width: 100%;
}

.action-btn {
  flex: 1;
  height: 40px;
  line-height: 40px;
  padding: 0;
  font-size: 14px;
  border-radius: 20px;
  margin: 0;
}

.action-btn.primary {
  background-color: #ff4d4f;
  color: #fff;
  border: none;
}

.action-btn.secondary {
  background-color: #fff;
  color: #666;
  border: 1px solid #d9d9d9;
}

/* 响应式调整 */
@media (min-width: 768px) {
  .pay-container {
    max-width: 768px;
    margin: 0 auto;
  }
  
  .pay-bottom {
    max-width: 768px;
    margin: 0 auto;
    left: 50%;
    transform: translateX(-50%);
  }
}

/* 动画效果 */
.payment-option:active, .result-actions .action-btn:active {
  opacity: 0.7;
}

.pay-btn:active:not([disabled]) {
  background-color: #d32f2f;
}