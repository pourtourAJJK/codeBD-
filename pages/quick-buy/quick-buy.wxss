/* 快速购水页面样式 */
.quick-buy-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 15px;
  background-color: #2F8FC7;
  color: white;
  height: 50px;
}

.header-left {
  width: 50px;
}

.back-icon {
  font-size: 24px;
  color: white;
}

.header-title {
  font-size: 18px;
  font-weight: 600;
}

.header-right {
  width: 50px;
}

/* 商品列表 */
.product-list {
  background-color: #fff;
}

.product-item {
  display: flex;
  padding: 15px;
  border-bottom: 1px solid #f0f0f0;
}

.product-image {
  width: 120px;
  height: 120px;
  border-radius: 8px;
  margin-right: 15px;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-title {
  font-size: 16px;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-spec {
  font-size: 14px;
  color: #666;
  margin-top: 5px;
}

.product-price {
  display: flex;
  align-items: center;
  margin-top: 8px;
}

.current-price {
  font-size: 18px;
  color: #e64340;
  font-weight: bold;
}

.original-price {
  font-size: 14px;
  color: #999;
  text-decoration: line-through;
  margin-left: 8px;
}

.product-sales {
  font-size: 13px;
  color: #999;
  margin-top: 5px;
}

/* 空结果提示 */
.empty-results {
  padding: 80px 0;
  text-align: center;
  background-color: #fff;
}

.empty-text {
  font-size: 16px;
  color: #999;
}