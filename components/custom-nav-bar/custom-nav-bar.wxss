.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  display: flex;
  flex-direction: column;
}

.status-bar {
  width: 100%;
}

.nav-content {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 0 20px;
  box-sizing: border-box;
}

.location-container {
  display: flex;
  align-items: center;
  margin-right: 20px;
  cursor: pointer;
  flex-shrink: 0;
}

.location-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.location-text {
  font-size: 28rpx;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.arrow-icon {
  width: 20rpx;
  height: 20rpx;
  margin-left: 8rpx;
  transform: rotate(90deg);
}

.nav-title {
  font-weight: 500;
  text-align: center;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}