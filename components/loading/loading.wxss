/* 加载遮罩层 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: transparent;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.loading-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px;
}

/* 品牌标识容器 */
.logo-wrap {
  position: relative;
  width: 320px;
  height: 180px;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 仰峰文字 */
.yangfeng-text {
  position: relative;
  text-align: center;
  font-family: "楷体", "隶书", "STKaiti", "SimKai", sans-serif;
  letter-spacing: -5px;
}

.yangfeng-text .top-word,
.yangfeng-text .bottom-word {
  font-size: 70px;
  font-weight: 900;
  color: #000;
  opacity: 0;
  animation: fadeIn 0.6s forwards;
  display: block;
  line-height: 1;
}

.yangfeng-text .top-word {
  animation-delay: 0.2s;
  margin-bottom: 5px;
}

.yangfeng-text .bottom-word {
  animation-delay: 0.4s;
}

/* 旋转的三角形 */
.triangle {
  width: 30px;
  height: 27px;
  background: #000;
  clip-path: polygon(50% 0, 0 100%, 100% 100%);
  margin: 0 30px;
  animation: triangleSpin 1.5s linear infinite;
  opacity: 0;
  animation-delay: 0.3s;
  align-self: center;
}

/* 硒养山泉文字 */
.seyang-text {
  display: flex;
  flex-direction: column;
  font-family: "楷体", "隶书", "STKaiti", "SimKai", sans-serif;
  font-size: 30px;
  font-weight: 600;
  color: #000;
  letter-spacing: 2px;
  line-height: 1.2;
}

.seyang-text .seyang-item {
  opacity: 0;
  animation: fadeIn 0.6s forwards;
  display: block;
}

.seyang-text .seyang-item:first-child {
  animation-delay: 0.6s;
  margin-bottom: 8px;
}

.seyang-text .seyang-item:last-child {
  animation-delay: 0.8s;
}

/* 加载提示文字 */
.loading-text {
  font-size: 28px;
  color: #666;
  margin-top: 40px;
  opacity: 0;
  animation: fadeIn 0.6s forwards 1s;
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
}

/* 动画关键帧 */
@keyframes fadeIn {
  to {
    opacity: 1;
  }
}

@keyframes triangleSpin {
  from {
    transform: rotate(0deg);
    opacity: 1;
  }
  to {
    transform: rotate(360deg);
    opacity: 1;
  }
}